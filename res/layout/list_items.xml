<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="120sp"
    android:padding="6dip" >

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="@string/label"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/firstLine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/secondLine"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_toRightOf="@id/thumbnail"
		android:textAppearance="@style/header"/>

    <TextView
        android:id="@+id/secondLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/third_line_1"
        android:layout_toRightOf="@id/thumbnail"
        android:textAppearance="@style/content" />

	<TextView
	    android:id="@+id/third_line_1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_toRightOf="@id/thumbnail"
	    android:text="@string/title_cook_time"
	    android:textSize="16.0sp"
	    android:textAppearance="@style/subheader" />

	<TextView 
	    android:id="@+id/recipeCookTime"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/third_line_1"
	    android:textAppearance="@style/content" />

	<TextView
	    android:id="@+id/recipeSource"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight="true"
	    android:textAppearance="@style/subheader" />

</RelativeLayout> 